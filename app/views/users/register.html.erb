<h1>Register for Event</h1>
<div class="row">
	<div class="col-md-3">
		<%= form_with(model: @user , local: true) do |f| %>
		<%= render 'shared/error_messages' %>
		
		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :phone_number %>
		<%= f.telephone_field :phone_number %>

		<%= f.submit "Register" , class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
